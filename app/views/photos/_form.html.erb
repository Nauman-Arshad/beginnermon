<div class="w-full lg:w-1/3 px-2 mb-6 lg:mb-0 m-auto">
  <div class="bg-white shadow rounded-lg">
    <%= form_with(model: photo) do |form| %>
      <% if photo.errors.any? %>
        <div class="border-b border-grey-lighter p-4">
          <h3 class="text-grey-darkest">
            <%= pluralize(photo.errors.count, "error") %>
          </h3>
          <ul>
            <% photo.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="p-4">
        <div class="mb-4">
          <%= form.label :image, class: "uppercase text-sm tracking-wide font-semibold text-grey-darker px-2" %>
          <%= form.file_field :image, required: true, class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none  " %>
        </div>
        <div class="mb-4">
          <%= form.label :content, class: "uppercase text-sm tracking-wide font-semibold text-grey-darker px-2" %>
          <%= form.text_area :content, required: true, rows: "4", class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500", placeholder: "Write your thoughts here..." %>
        </div>
        <%= form.hidden_field :user_id, value: current_user.id %>
      </div>
      <%= form.submit "Create", class: "uppercase font-bold w-full bg-blue-light text-lg text-blue-lightest rounded-b-lg p-3" %>
    <% end %>
  </div>
  <div class="flex gap-2 py-2">
    <%= link_to "Show ", @photo, class: "bg-yellow-500 hover:bg-yellow-700 text-white py-2 px-4 rounded" %>
    <%= link_to "Back", photos_path, class: "bg-gray-500 hover:bg-gray-700 text-white py-2 px-4 rounded" %>
  </div>
</div>