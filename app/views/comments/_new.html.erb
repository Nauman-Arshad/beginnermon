<%= form_with model: [photo, Comment.new] do |form| %>
  <div class="ml-2">
    <p class="text-yellow-500">Your comment</p>
    <%= form.text_area :content, required: true, rows: "4", class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500", placeholder: "Write your thoughts here..." %>
    <%= form.submit 'Comment', class: "p-2 bg-green-500 hover:bg-green-700 text-white py-2 px-4 rounded-md mt-2" %>
  </div>
<% end %>